<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="clr-namespace:ObcyInDesktop.UI">
    <Style TargetType="{x:Type ToolTip}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToolTip}">
                    <Border Background="{x:Static ui:Colors.ToolTipBackgroundBrush}"
                            BorderBrush="{x:Static ui:Colors.ToolTipBorderBrush}"
                            BorderThickness="1" Padding="2">
                        <TextBlock Text="{TemplateBinding Content}" Foreground="{x:Static ui:Colors.ToolTipFontBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>